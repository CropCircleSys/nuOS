#!/bin/sh
set -e; set -u; set -C

# nuOS 0.0.11.0b0.1 - bin/nu_imap - LICENSE: MOZ_PUB
#
# Copyright (c) 2008-2017 Chad Jacob Milios and Crop Circle Systems, Inc.
# All rights reserved.
#
# This Source Code Form is subject to the terms of the Mozilla Public License, v2.0.
# If a copy of the MPL was not distributed alongside this file, you can obtain one at
# http://mozilla.org/MPL/2.0/ . This software project is not affiliated with the Mozilla
# Foundation.
#
# Official updates and community support available at https://nuos.org .
# Other licensing options and professional services available at https://ccsys.com .

NUOS_VER=0.0.11.0b0.1

while getopts C:h:p:Psv OPT; do case $OPT in
	C) CHROOTDIR=$OPTARG;;
	h) HOST_NAME=$OPTARG;;
	p) POOL_NAME=$OPTARG;;
	P) OPT_POP3=y;;
	s) OPT_SSL=y;;
	v) OPT_VERBOSE=y;;
esac; done; shift $(($OPTIND-1))
[ $# = 0 ]

[ -z "${CHROOTDIR-}" ] || exit 43 # CHROOTDIR is unsupported, though we want to some day so most of the code is still written with support

. "$(dirname "$(realpath "$0")")/../lib/nu_system.sh"
. "$(dirname "$(realpath "$0")")/../lib/nu_common.sh"

nuos_init

echo 'host name       -h HOST_NAME      ' ${HOST_NAME:=$HOST}
echo 'pool name       -p POOL_NAME      ' ${POOL_NAME:=$POOL_BOOT_NAME}
echo -n 'enable pop3     -P OPT_POP3        ' && [ -n "${OPT_POP3-}" ] && echo set || echo null
echo -n 'ssl             -s OPT_SSL         ' && [ -n "${OPT_SSL-}" ] && echo set || echo null
echo

maybe_yell

[ ! -e "${CHROOTDIR-}/usr/local/etc/cyrus" ]

mkdir "${CHROOTDIR-}/usr/local/etc/cyrus"

export LC_CTYPE=C

sed -i '' -Ee 's/^#([[:blank:]]*idled)[[:>:]]/\1/' "${CHROOTDIR-}/usr/local/etc/cyrus.conf"
if [ -z "${OPT_POP3-}" ]; then
	sed -i '' -Ee 's/^([[:blank:]]*pop3)[[:>:]]/#\1/;s/^([[:blank:]]*pop3s)[[:>:]]/#\1/' "${CHROOTDIR-}/usr/local/etc/cyrus.conf"
fi

cat >> "${CHROOTDIR-}/usr/local/etc/imapd.conf" <<EOF

servername: $HOST_NAME
altnamespace: yes
autocreate_quota: -1
autocreate_post: yes
EOF

if [ -n "${OPT_SSL-}" ]; then
	mkdir "${CHROOTDIR-}/usr/local/etc/cyrus/ssl"
	(umask 77 && mkdir "${CHROOTDIR-}/usr/local/etc/cyrus/ssl/private")
	${CHROOTDIR:+chroot "$CHROOTDIR"} chown cyrus /usr/local/etc/cyrus/ssl/private
	if zfs list $POOL_NAME-pvt > /dev/null 2>&1; then # this check will need to be refined if ever we support CHROOTDIR
		chflags schg "${CHROOTDIR-}/usr/local/etc/cyrus/ssl/private"
		zfs create -o mountpoint=/usr/local/etc/cyrus/ssl/private $POOL_NAME-pvt/sys/host/imap-ssl
		chmod go-rx "${CHROOTDIR-}/usr/local/etc/cyrus/ssl/private"
		${CHROOTDIR:+chroot "$CHROOTDIR"} chown cyrus /usr/local/etc/cyrus/ssl/private
	fi
	cp "${CHROOTDIR-}/etc/ssl/certs/$HOST_NAME.crt" "${CHROOTDIR-}/usr/local/etc/cyrus/ssl/"
	cp "${CHROOTDIR-}/etc/ssl/private/$HOST_NAME.key" "${CHROOTDIR-}/usr/local/etc/cyrus/ssl/private/"
	chown cyrus "${CHROOTDIR-}/usr/local/etc/cyrus/ssl/private/$HOST_NAME.key"
	cat >> "${CHROOTDIR-}/usr/local/etc/imapd.conf" <<EOF
tls_server_cert: /usr/local/etc/cyrus/ssl/$HOST_NAME.crt
tls_server_key: /usr/local/etc/cyrus/ssl/private/$HOST_NAME.key
EOF
	if [ -f "${CHROOTDIR-}/etc/ssl/certs/$HOST_NAME.ca.crt" ]; then
		cp "${CHROOTDIR-}/etc/ssl/certs/$HOST_NAME.ca.crt" "${CHROOTDIR-}/usr/local/etc/cyrus/ssl/"
		cat >> "${CHROOTDIR-}/usr/local/etc/imapd.conf" <<EOF
tls_client_ca_file: /usr/local/etc/cyrus/ssl/$HOST_NAME.ca.crt
EOF
	fi
else
	sed -i '' -Ee 's/^([[:blank:]]*imaps)[[:>:]]/#\1/;s/^([[:blank:]]*pop3s)[[:>:]]/#\1/' "${CHROOTDIR-}/usr/local/etc/cyrus.conf"
fi

zfs list $POOL_NAME/svc 2> /dev/null || zfs create -o mountpoint=none -o canmount=off $POOL_NAME/svc
zfs create -o mountpoint=none -o canmount=off $POOL_NAME/svc/imap
zfs create -o mountpoint=/var/imap $POOL_NAME/svc/imap/cyrus
zfs create -o mountpoint=/var/spool/imap $POOL_NAME/svc/imap/cyrus/spool

${CHROOTDIR:+chroot "$CHROOTDIR"} /usr/local/cyrus/bin/mkimap

zfs snapshot -r $POOL_NAME/svc/imap/cyrus@genesis

sister enable_svc ${CHROOTDIR:+-C "$CHROOTDIR"} cyrus_imapd

echo "Configured $HOST_NAME for imap service."
