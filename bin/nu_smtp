#!/bin/sh
set -e; set -u; set -C

# nuOS 0.0.9.3b0 - bin/nu_smtp - LICENSE: MOZ_PUB
#
# Copyright (c) 2008-2014 Chad Jacob Milios and Crop Circle Systems, Inc.
# All rights reserved.
#
# This Source Code Form is subject to the terms of the Mozilla Public License, v2.0.
# If a copy of the MPL was not distributed alongside this file, you can obtain one at
# http://mozilla.org/MPL/2.0/ . This software project is not affiliated with the Mozilla
# Foundation.
#
# Official updates and community support available at http://nuos.org .
# Other licensing options and professional services available at http://ccsys.com .

NUOS_VER=0.0.9.3b0

while getopts C:h:p:sv OPT; do case $OPT in
	C) CHROOTDIR=$OPTARG;;
	h) HOST_NAME=$OPTARG;;
	p) POOL_NAME=$OPTARG;;
	s) OPT_SSL=y;;
	v) OPT_VERBOSE=y;;
esac; done; shift $(($OPTIND-1))
[ $# = 0 ]

[ -z "${CHROOTDIR-}" ] || exit 43 # CHROOTDIR is unsupported, though we want to some day so most of the code is still written with support

. "$(dirname "$(realpath "$0")")/../lib/nu_system.sh"
. "$(dirname "$(realpath "$0")")/../lib/nu_common.sh"

nuos_init

echo 'host name       -h HOST_NAME      ' ${HOST_NAME:=$HOST}
echo 'pool name       -p POOL_NAME      ' ${POOL_NAME:=$POOL_BOOT_NAME}
echo -n 'ssl             -s OPT_SSL         ' && [ -n "${OPT_SSL-}" ] && echo set || echo null
echo

maybe_yell

[ ! -e "${CHROOTDIR-}/usr/local/etc/postfix/virtual" ]

touch "${CHROOTDIR-}/usr/local/etc/postfix/virtual" "${CHROOTDIR-}/usr/local/etc/postfix/aliases"

cat > "${CHROOTDIR-}/usr/local/etc/postfix/domains" <<EOF
$HOST_NAME	OK
EOF

postmap "${CHROOTDIR-}/usr/local/etc/postfix/domains"
postmap "${CHROOTDIR-}/usr/local/etc/postfix/virtual"
postalias "${CHROOTDIR-}/usr/local/etc/postfix/aliases"

cat >> "${CHROOTDIR-}/usr/local/etc/postfix/main.cf" <<EOF
mydomain = $HOST_NAME
EOF

cat >> "${CHROOTDIR-}/usr/local/etc/postfix/main.cf" <<'EOF'

myhostname = $mydomain
alias_database = hash:$config_directory/aliases
alias_maps = $alias_database
message_size_limit = 67108864
mailbox_size_limit = 1073741824
virtual_alias_maps = hash:$config_directory/virtual
mailbox_transport = lmtp:unix:/var/imap/socket/lmtp
local_recipient_maps = $virtual_alias_maps
virtual_alias_domains = hash:$config_directory/domains
smtpd_sender_login_maps = $local_recipient_maps
smtpd_sasl_auth_enable = yes
smtpd_sasl_local_domain = $mydomain
smtpd_sasl_security_options = noanonymous
smtpd_relay_restrictions = reject_authenticated_sender_login_mismatch, permit_sasl_authenticated, permit_mynetworks, reject_unauth_destination, reject_unlisted_recipient
smtpd_client_restrictions = permit_sasl_authenticated, permit_mynetworks
smtpd_helo_required = yes
smtpd_helo_restrictions = permit_sasl_authenticated, permit_mynetworks, reject_invalid_hostname, reject_unknown_hostname, reject_non_fqdn_hostname
EOF

if [ -n "${OPT_SSL-}" ]; then
	mkdir "${CHROOTDIR-}/usr/local/etc/postfix/ssl"
	(umask 77 && mkdir "${CHROOTDIR-}/usr/local/etc/postfix/ssl/private")
	if zfs list $POOL_NAME-pvt > /dev/null 2>&1; then # this check will need to be refined if ever we support CHROOTDIR
		chflags schg "${CHROOTDIR-}/usr/local/etc/postfix/ssl/private"
		zfs create -o mountpoint=/usr/local/etc/postfix/ssl/private $POOL_NAME-pvt/sys/host/smtp-ssl
		chmod go-rx "${CHROOTDIR-}/usr/local/etc/postfix/ssl/private"
	fi
	cp "${CHROOTDIR-}/etc/ssl/certs/$HOST_NAME.crt" "${CHROOTDIR-}/usr/local/etc/postfix/ssl/"
	cp "${CHROOTDIR-}/etc/ssl/private/$HOST_NAME.key" "${CHROOTDIR-}/usr/local/etc/postfix/ssl/private/"
	cat >> "${CHROOTDIR-}/usr/local/etc/postfix/main.cf" <<'EOF'
smtpd_tls_security_level = may
smtpd_tls_cert_file = $config_directory/ssl/$myhostname.crt
smtpd_tls_key_file = $config_directory/ssl/private/$myhostname.key
EOF
	if [ -f "${CHROOTDIR-}/etc/ssl/certs/$HOST_NAME.ca.crt" ]; then
		cp "${CHROOTDIR-}/etc/ssl/certs/$HOST_NAME.ca.crt" "${CHROOTDIR-}/usr/local/etc/postfix/ssl/"
		cat >> "${CHROOTDIR-}/usr/local/etc/postfix/main.cf" <<'EOF'
smtpd_tls_CAfile = $config_directory/ssl/$myhostname.ca.crt
EOF
	fi
fi

sed -i '' -Ee '
	/^#submission[[:>:]]/,/^#[[:graph:]]/{
		s/^#(submission[[:>:]].*)$/\1/
		s/^#([[:blank:]]+-o (syslog_name|smtpd_tls_security_level|smtpd_sasl_auth_enable|milter_macro_daemon_name)=.*)$/\1/
	}
' "${CHROOTDIR-}/usr/local/etc/postfix/master.cf"

zfs create -o mountpoint=none -o canmount=off $POOL_NAME/svc/smtp
zfs create -o mountpoint=none -o canmount=off $POOL_NAME/svc/smtp/postfix

eval `stat -f "mode=%OMp%03OLp uid=%Du gid=%Dg flags=%Of" "${CHROOTDIR-}/var/db/postfix"`
zfs create -o mountpoint=/var/db/postfix $POOL_NAME/svc/smtp/postfix/db
chown $uid:$gid "${CHROOTDIR-}/var/db/postfix"
chmod $mode "${CHROOTDIR-}/var/db/postfix"
chflags $flags "${CHROOTDIR-}/var/db/postfix"

eval `stat -f "mode=%OMp%03OLp uid=%Du gid=%Dg flags=%Of" "${CHROOTDIR-}/var/spool/postfix"`
mv "${CHROOTDIR-}/var/spool/postfix" "${CHROOTDIR-}/var/spool/postfix.orig"
zfs create -o mountpoint=/var/spool/postfix $POOL_NAME/svc/smtp/postfix/spool
chown $uid:$gid "${CHROOTDIR-}/var/spool/postfix"
chmod $mode "${CHROOTDIR-}/var/spool/postfix"

mv "${CHROOTDIR-}/var/spool/postfix.orig/"* "${CHROOTDIR-}/var/spool/postfix/"
mv "${CHROOTDIR-}/var/spool/postfix.orig/".* "${CHROOTDIR-}/var/spool/postfix/" 2> /dev/null || true
rmdir "${CHROOTDIR-}/var/spool/postfix.orig"
chflags $flags "${CHROOTDIR-}/var/spool/postfix"

sister enable_svc ${CHROOTDIR:+-C "$CHROOTDIR"} postfix

echo "Configured $HOST_NAME for smtp service."
