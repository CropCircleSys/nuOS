# Other licensing options and professional services available at https://ccsys.com .

NUOS_VER=0.0.11.0b0.1

. "$(dirname "$(realpath "$0")")/../lib/nu_system.sh"

while getopts fv OPT; do case $OPT in
	f) OPT_FORCE=y;;
	v) OPT_VERBOSE=y;;
esac; done; shift $(($OPTIND-1))

. "$(dirname "$(realpath "$0")")/../lib/nu_common.sh"

[ $# -ge 1 ] || set -- `x=/ca.cer; cd && cd .acme.sh && ls *$x 2> /dev/null | sed -e "s|$x\$||"`

nuos_init

maybe_yell

SSL_CERTS=/etc/ssl/certs

for d in $@; do
  acme.sh --renew -d $d ${OPT_FORCE:+--force} && renewed=y || renewed=
  if [ -n "${renewed-}" ]; then
    cat /root/.acme.sh/$d/$d.cer \
      >| $SSL_CERTS/$d.crt
    cat /root/.acme.sh/$d/ca.cer \
      >| $SSL_CERTS/$d.ca.crt
    for l in `ls $SSL_CERTS.installed/localhost/$d.crt/* 2> /dev/null`; do
      cat $SSL_CERTS/$d.crt >| "$l"
    done
    for l in `ls $SSL_CERTS.installed/localhost/$d.ca.crt/* 2> /dev/null`; do
      cat $SSL_CERTS/$d.ca.crt >| "$l"
    done
    for l in `ls $SSL_CERTS.installed/localhost/$d.full.crt/* 2> /dev/null`; do
      cat $SSL_CERTS/$d.crt >| "$l"
      if [ -f $SSL_CERTS/$d.ca.crt ]; then
        cat $SSL_CERTS/$d.ca.crt >> "$l"
      fi
    done
  fi
done
