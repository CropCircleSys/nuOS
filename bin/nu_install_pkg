#!/bin/sh
set -e; set -u; set -C

# nuOS 0.0.9.3b0 - bin/nu_install_pkg - LICENSE: BSD_SMPL
#
# Copyright (c) 2008-2015 Chad Jacob Milios and Crop Circle Systems, Inc.
# All rights reserved.
#
