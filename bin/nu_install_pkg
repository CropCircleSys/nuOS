# If a copy of the Simplified BSD License was not distributed alongside this file, you can
# obtain one at http://www.freebsd.org/copyright/freebsd-license.html . This software
# project is not affiliated with the FreeBSD Project.
#
# Official updates and community support available at http://nuos.org .
# Other licensing options and professional services available at http://ccsys.com .

NUOS_VER=0.0.9.2d12

while getopts C:MvyY OPT && [ $OPT != '?' ]; do
	case $OPT in
		C)
			CHROOTDIR="$OPTARG"
			;;
		M)
			OPT_NOMAKE=y
			;;
		v)
			OPT_VERBOSE=y
			;;
		y)
			OPT_YES=y
			;;
		Y)
			OPT_YES_SUBPROCESS=y
			;;
		*)
			echo "usage: `basename \"$0\"` [-Mvy] [-C chroot_dir] port_origin ..." >&2
			exit 1
	esac
done
while [ $OPTIND -gt 1 ]; do
	shift
	OPTIND=$(($OPTIND - 1))
done

. "$(dirname "$(realpath "$0")")/../lib/nu_system.sh"
. "$(dirname "$(realpath "$0")")/../lib/nu_install.sh"

maybe_yell

if [ -n "${OPT_YES-}" ]; then
	yes | sh $0 ${OPT_NOMAKE:+-M} ${OPT_VERBOSE:+-v} ${CHROOTDIR:+-C $CHROOTDIR} -Y $@
	exit $?
fi

require_ports_tree
prepare_make_conf make_conf cmd_to_retire_make_conf

if [ -n "${CHROOTDIR-}" ]; then
	if [ ! -d "$CHROOTDIR/usr/ports/packages/All" ]; then
		mount -t nullfs /usr/ports/packages "$CHROOTDIR/usr/ports/packages"
		nullfs_mounted=y
	fi
fi
for port in $*; do
	uni=`echo $port | tr / _`
	script="$(dirname "$(realpath "$0")")/../pkg/$uni.sh"
	pkg=`cd /usr/ports/$port && make -V PKGNAME`
	pkg_file=/usr/ports/packages/All/$pkg.tbz
	if [ ! -f $pkg_file ]; then
		[ -z "${OPT_NOMAKE-}" ]
		if [ -d /var/db/pkg/$pkg ]; then
			make_target=package-noinstall
		else
			[ -z "`pkg_info -qO $port`" ]
			make_target="install package"
		fi
		needed_deps=`cd /usr/ports/$port && make "__MAKE_CONF=$make_conf" -DBATCH build-depends-list run-depends-list | sed -e 's|^/usr/ports/||' | sort -u`
		sister nu_install_pkg ${CHROOTDIR:+-C $CHROOTDIR} ${OPT_YES_SUBPROCESS:+-y} $needed_deps
		destdir=
		if [ -f "$script" ]; then
			pkg_step=pre-build
			. "$script"
		fi
		(cd /usr/ports/$port && make -DNOCLEANDEPENDS clean && make "__MAKE_CONF=$make_conf" -DBATCH $make_target && make -DNOCLEANDEPENDS clean)
		if [ -f "$script" ]; then
			pkg_step=post-build
			. "$script"
		fi
	fi
	if [ ! -d "${CHROOTDIR-}/var/db/pkg/$pkg" ]; then
		destdir="${CHROOTDIR-}"
		require_tmp tempfile
		if pkg_add ${CHROOTDIR:+-C $CHROOTDIR} -nv $pkg_file >| "$tempfile"; then
		else
			needed_deps=$( sed -nEe "/^Package '.*' depends on '.*' with '.*' origin./{
				N
				s/and was not found.\$/missing/
				s/ - already installed.\$/installed/
				s/^Package '(.*)' depends on '(.*)' with '(.*)' origin.\n(.*)\$/\1 \2 \3 \4/
				p
			}" "$tempfile" | grep -E '\<missing$' | cut -w -f 3 )
			sister nu_install_pkg ${CHROOTDIR:+-C $CHROOTDIR} ${OPT_YES_SUBPROCESS:+-y} $needed_deps
		fi
		rm "$tempfile"
		if [ -f "$script" ]; then
			pkg_step=pre-install
			. "$script"
		fi
		(cd / && pkg_add ${CHROOTDIR:+-C $CHROOTDIR} -F -i $pkg_file)
		if [ -f "$script" ]; then
			pkg_step=post-install
			. "$script"
		fi
	fi
done
if [ -n "${nullfs_mounted-}" ]; then
	umount "$CHROOTDIR/usr/ports/packages"
fi

$cmd_to_retire_make_conf "$make_conf"
