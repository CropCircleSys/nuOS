# obtain one at http://www.freebsd.org/copyright/freebsd-license.html . This software
# project is not affiliated with the FreeBSD Project.
#
# Official updates and community support available at http://nuos.org .
# Other licensing options and professional services available at http://ccsys.com .

NUOS_VER=0.0.9.3b0

while getopts f:v OPT; do case $OPT in
	f) FROM_SNAP=$OPTARG;;
	v) OPT_VERBOSE=y;;
esac; done; shift $(($OPTIND-1))
[ $# = 0 ]

. "$(dirname "$(realpath "$0")")/../lib/nu_system.sh"
. "$(dirname "$(realpath "$0")")/../lib/nu_common.sh"

nuos_init -q

maybe_yell

if [ -n "${FROM_SNAP-}" ]; then
	send_add_args="-I @$FROM_SNAP"
fi

snaptime=t`date +%s`

require_tmp backlist

grep -Ev '^#|^$' /etc/nuos/backup >| "$backlist"

sed -e "s|^|$POOL_BOOT_NAME/|;s|\$|@$snaptime|" "$backlist" | xargs zfs snapshot -r

while read ds; do
	ds=$POOL_BOOT_NAME/$ds
	if [ -z "${FROM_SNAP-}" ]; then
		for sub_ds in `zfs get -Hp -r -t filesystem,volume -o value name $ds`; do
			found_root_ds=
			check_ds=$sub_ds
			require_tmp add_snaps
			while [ -z "$found_root_ds" ]; do
				origin=`zfs get -Hp -o value origin $check_ds`
				if [ "$origin" = - ]; then
					found_root_ds=y
				else
					echo $origin >> "$add_snaps"
					check_ds=${origin%@*}
				fi
			done
			tail -r < "$add_snaps" | xargs -n1 zfs send
			retire_tmp add_snaps
		done
	fi
	cmd="zfs send -R ${send_add_args-} $ds@$snaptime"
	$cmd
done < "$backlist"

retire_tmp backlist
